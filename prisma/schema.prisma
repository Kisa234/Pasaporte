generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Dni          Int       @id
  NroPasaporte Int       @unique  
  Nombres      String
  Correo       String
  Telefono     Int
  Distrito     String
  FechaNac     DateTime
  FechaReg     DateTime  @default(now())
  Puntaje      Int       @default(0)
  Nivel       String     @default("Explorador del Caf√©")
  Eliminado    Boolean   @default(false)

  Visita Visita[]
}

model Visita{
  idVisita    String    @id @default(uuid())
  NroBoleta   Int       @unique
  FechaVisita DateTime  @default(now())
  Comentario  String
  Dni         Int
  
  User        User      @relation(fields: [Dni], references: [Dni])
}
